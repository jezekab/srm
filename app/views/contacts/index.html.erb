<h1>All Contacts</h1>

<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <a type="button" class="btn btn-default" href=<%= new_contact_path %>>New Contact</a>
  <a type="button" class="btn btn-default" href=<%= new_student_path %>>New Student</a>
  <a type="button" class="btn btn-default" href=<%= new_stakeholder_path %>>New Executive</a>
  <a type="button" class="btn btn-default" href=<%= new_executive_path %>>New Stakeholder</a>
</div>

<br>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thread>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-Mail</th>
        <th>Contact Number</th>
        <th>Type</th>
        <th> </th>
      </tr>
    </thread>


    <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.fname %></td>
          <td><%= contact.lname %></td>
          <td><%= contact.email %></td>
          <td><%= contact.number %></td>
          <td><%= contact.class %></td>
          <td>
            <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Show', contact%>
              </li>
              <li>
                <%= link_to 'Edit', edit_contact_path(contact)%>
              </li>
              <li>
                <%= link_to 'Destroy', contact_path(contact),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
              </li>
            </ul>
          </div>
          </td>
        </tr>
    <% end %>
  </table>
</div>

