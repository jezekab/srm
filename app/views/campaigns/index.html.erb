<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Priority</th>
      <th>Due</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.type %></td>
        <td><%= campaign.priority %></td>
        <td><%= campaign.due %></td>
        <td><%= campaign.contact %></td>
        <td><%= link_to 'Show', campaign, :class => 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign), :class => 'btn btn-warning'%></td>
        <td><%= link_to 'Destroy', campaign_path(campaign), :class => 'btn btn-danger',
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

