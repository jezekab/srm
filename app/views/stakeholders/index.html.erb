<p id="notice"><%= notice %></p>

<h1>Listing Stakeholders</h1>

<%= link_to 'New Stakeholder', new_stakeholder_path, class: 'btn btn-default' %>

<div class="table-responsive">
  <table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-Mail</th>
      <th>Contact Number</th>
      <th>Workplace</th>
      <th>Department</th>
      <th>Relation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stakeholders.each do |stakeholder| %>
      <tr>
        <td><%= stakeholder.fname %></td>
        <td><%= stakeholder.lname %></td>
        <td><%= stakeholder.email %></td>
        <td><%= stakeholder.number %></td>
        <td><%= stakeholder.workplace %></td>
        <td><%= stakeholder.department %></td>
        <td><%= stakeholder.relation %></td>
        <td class="btn-group">
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Show', stakeholder%>
              </li>
              <li>
                <%= link_to 'Edit', edit_stakeholder_path(stakeholder)%>
              </li>
              <li>
                <%= link_to 'Destroy', stakeholder_path(stakeholder),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Back to Contacts', contacts_path %>